{
    "name": "dealerapp",
    "version": "1.0.0",
    "description": "A simple CAP project.",
    "repository": "<Add your repository here>",
    "license": "UNLICENSED",
    "private": true,
    "dependencies": {
        "@sap-cloud-sdk/resilience": "^3.10.0",
        "@sap/cds": "^7",
        "@sap/cds-hana": "^2",
        "@sap/xssec": "^3.6.1",
        "express": "^4",
        "passport": "^0.7.0",
        "sqlite": "^5.1.1"
    },
    "devDependencies": {
        "@cap-js/sqlite": "^1",
        "@sap/cds-dk": "^7",
        "@sap/hdi-deploy": "4.9.2",
        "@sap/ux-specification": "^1.120.1",
        "rimraf": "^3.0.2"
    },
    "cds": {
        "requires": {
            "[development]": {
                "auth": {
                    "kind": "mocked-auth",
                    "users": {
                        "rose": {
                            "roles": []
                        },
                        "martha": {
                            "roles": [
                                "reviewer"
                            ]
                        },
                        "amy": {
                            "roles": [
                                "processor"
                            ]
                        },
                        "admin": {
                            "password": "admin",
                            "roles": [
                                "admin"
                            ]
                        }
                    }
                }
            },
            "[production]": {
                "db": "hana",
                "auth": {
                    "kind": "xsuaa"
                }
            }
        }
    },
    "scripts": {
        "start": "cds-serve",
        "undeploy": "cf undeploy dealerapp --delete-services --delete-service-keys --delete-service-brokers",
        "build": "rimraf resources mta_archives && mbt build --mtar archive",
        "deploy": "cf deploy mta_archives/archive.mtar --retries 1",
        "watch-order": "cds watch --open order/webapp/index.html?sap-ui-xx-viewCache=false",
        "watch-orders": "cds watch --open orders/webapp/index.html?sap-ui-xx-viewCache=false"
    },
    "sapux": [
        "app/orders"
    ]
}